<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mp_provicion_tree" model="ir.ui.view">
        <field name="name">mp.provicion.tree</field>
        <field name="model">mp.provicion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo"/>
                <field name="decripcion"/>
                <field name="cuanta_pasivo_id" options="{'no_create': True, 'no_open':True}"/>
                <field name="cuanta_gasto_id" options="{'no_create': True, 'no_open':True}"/>
                <field name="mp_grupo_provicion_ids" widget="many2many_tags" options="{'no_create': True, 'no_open':True}"/>
            </tree>
        </field>
    </record>

    <record id="view_grupo_provicion_form" model="ir.ui.view">
        <field name="name">mp.grupo.provicion.form</field>
        <field name="model">mp.grupo.provicion</field>
        <field name="arch" type="xml">
            <form string="MP Grupo provicion">
                <sheet>
                    <group>
                        <field name="nombre"/>
                    </group>
                    <group>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_provicion_form" model="ir.ui.view">
        <field name="name">mp.provicion.form</field>
        <field name="model">mp.provicion</field>
        <field name="arch" type="xml">
            <form string="MP provicion">
                <sheet>
                    <group>
                        <field name="codigo"/>
                    </group>
                    <group>
                        <field name="decripcion"/>
                    </group>
                    <group>
                        <field name="cuanta_gasto_id" options="{'no_create': True, 'no_open':True}"/>
                        <field name="cuanta_pasivo_id" options="{'no_create': True, 'no_open':True}"/>
                    </group>
                    <group>
                        <field name="mp_grupo_provicion_ids" widget="many2many_tags" options="{'no_create': True, 'no_open':True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mp_grupo_flujo_tree" model="ir.ui.view">
        <field name="name">mp.grupo.provicion.tree</field>
        <field name="model">mp.grupo.provicion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ir_account_mp_provicion">
        <field name="name">MP provicion</field>
        <field name="res_model">mp.provicion</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="ir_account_mp_grupo_provicion">
        <field name="name">MP Grupo provicion</field>
        <field name="res_model">mp.grupo.provicion</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="account_mp_provicion_menu" parent="account.menu_finance_configuration"
              name="Provicion" sequence="2"/>

    <menuitem id="menu_action_account_mp_provicion"
              name="MP Provicion"
              action="ir_account_mp_provicion" parent="account_mp_provicion_menu"/>

    <menuitem id="menu_action_account_mp_grupo_provicion"
              name="MP Grupo Provicion"
              action="ir_account_mp_grupo_provicion" parent="account_mp_provicion_menu"/>


</odoo>
